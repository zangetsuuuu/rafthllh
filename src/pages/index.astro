---
import Layout from '../layouts/Layout.astro';
import Section from '../components/SectionLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import SectionDesc from '../components/SectionDesc.astro';
import SectionLink from '../components/SectionLink.astro';
import Avatar from '../components/Avatar.astro';
import ScrollingIcons from '../components/ScrollingIcons.astro';
import ProjectsList from '../components/ProjectsList.astro';
import GalleryList from '../components/GalleryList.astro';
---

<Layout title="Rafif Athallah" description="Frontend Developer" url="https://rafthllh.vercel.app">
    <!-- Hero Section -->
    <Section>
        <div class="flex flex-col items-center justify-center mt-16 md:mt-20">
            <Avatar />
            <SectionTitle content="Rafif Athallah" />
            <SectionDesc content="Frontend Developer & GFX Designer" />
            <ScrollingIcons />
        </div>
    </Section>

    <!-- Projects Section -->
    <Section>
        <div class="flex flex-col items-center justify-center py-4 md:py-14">
            <SectionTitle content="Projects" />
            <SectionDesc content="Here are some of my projects that I've made" />
            <div class="w-full px-6 md:px-8 lg:px-0">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 place-items-center">
                    <ProjectsList />
                </div>
            </div>
            <SectionLink link="/projects" content="View all projects" />
        </div>
    </Section>

    <!-- Gallery Section -->
    <Section>
        <div class="flex flex-col items-center justify-center py-4 md:py-14">
            <SectionTitle content="Gallery" />
            <SectionDesc content="A collection of my designs created using Figma and Alight Motion" />
            <div class="w-full px-6 md:px-8 lg:px-0">
                <div
                    id="gallery"
                    class="flex items-center md:grid md:grid-cols-3 lg:grid-cols-4 gap-4 overflow-x-auto whitespace-nowrap rounded-md"
                >
                    <GalleryList />
                </div>
            </div>
            <SectionLink link="/gallery" content="View all designs" />
        </div>
    </Section>
</Layout>
