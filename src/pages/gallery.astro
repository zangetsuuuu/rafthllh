---
import Layout from '../layouts/Layout.astro';
import Section from '../components/SectionLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import SectionDesc from '../components/SectionDesc.astro';
import SectionLink from '../components/SectionLink.astro';
import GalleryList from '../components/GalleryList.astro';

const classes =
    Astro.url.pathname === '/'
        ? 'flex items-center md:grid md:grid-cols-3 lg:grid-cols-4 gap-4 overflow-x-auto whitespace-nowrap'
        : 'grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 md:gap-4 place-items-center';
---

<Layout
    title="Gallery"
    description="A collection of my designs created using Figma and Alight Motion"
    url="https://rafthllh.vercel.app/gallery"
>
    <Section>
        <div class="flex flex-col items-center justify-center py-4 md:py-14">
            <SectionTitle content="Gallery" />
            <SectionDesc content="A collection of my designs created using Figma and Alight Motion" />
            <div class="w-full px-6 md:px-8 lg:px-0">
                <div id="gallery" class={classes}>
                    <GalleryList />
                </div>
            </div>
            <SectionLink link="/" content="Back to homepage" />
        </div>
    </Section>
</Layout>
