---
import Section from "./Section.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionDesc from "../components/SectionDesc.astro";
import { Image } from "astro:assets";
import HeroImage from "../assets/leon.webp";
---

<Section>
  <div class="flex flex-col items-center justify-center text-center py-16">
    <div
      class="bg-[#191919] flex items-center justify-center rounded-full w-48 md:w-64 h-48 md:h-64 mb-8 md:mb-10"
    >
      <Image
        src={HeroImage}
        alt="Hero"
        class="object-cover rounded-full overflow-hidden w-40 md:w-56 h-40 md:h-56"
        draggable="false"
        format="webp"
        loading="eager"
      />
    </div>
    <SectionTitle content="Rafif Athallah" />
    <SectionDesc content="Frontend Developer" />
  </div>
</Section>
