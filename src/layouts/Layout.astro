---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import More from '../components/More.astro';
import Modal from '../components/Modal.astro';
import '../styles/global.css';

const { title, description, url } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <main class="relative min-h-screen min-w-screen bg-black">
            <div class="container mx-auto leading-relaxed selection:bg-white selection:text-black pb-10 md:pb-0">
                <slot />
                <Navbar />
                <More />
            </div>
        </main>
        <Modal />
        <script src="../scripts/app.js"></script>
    </body>
</html>
