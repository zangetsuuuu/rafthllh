---
import { Image } from "astro:assets";
import Section from "./Section.astro";
import SectionTitle from "./SectionTitle.astro";
import SectionDesc from "./SectionDesc.astro";
import ScrollingIcons from "./ScrollingIcons.astro";
---

<Section>
  <div class="flex flex-col items-center justify-center text-center py-10 md:py-20">
    <div
      class="relative bg-[#191919] flex items-center justify-center rounded-full w-44 md:w-52 h-44 md:h-52 mb-8 md:mb-10"
    >
      <Image
        src={`/images/leon.webp`}
        alt="Hero"
        width={200}
        height={200}
        decoding="async"
        loading="eager"
        format="webp"
        draggable="false"
        class="object-cover rounded-full overflow-hidden w-36 md:w-44 h-36 md:h-44 select-none"
      />
      <div class="absolute -bottom-3 text-xs bg-[#212121] px-2.5 py-1 rounded-full">
        <div class="flex items-center justify-center space-x-2">
          <span class="relative flex h-1.5 w-1.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-emerald-500"></span>
          </span>
          <p class="text-gradient">Available</p>
        </div>
      </div>
    </div>
    <SectionTitle content="Rafif Athallah" />
    <SectionDesc content="Frontend Developer" />
    <ScrollingIcons />
  </div>
</Section>
